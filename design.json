    "text": {
      "primary": "#171717",
      "secondary": "#525252",
      "tertiary": "#737373",
      "disabled": "#A3A3A3",
      "inverse": "#FFFFFF",
      "link": "#CC785D",
      "linkHover": "#A85C42"
    },
    
    "border": {
      "light": "#F5F5F5",
      "main": "#E5E5E5",
      "strong": "#D4D4D4",
      "focus": "#CC785D"
    }
  },
  
  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif",
      "code": "'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', 'Source Code Pro', monospace"
    },
    
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.625",
      "loose": "2"
    },
    
    "letterSpacing": {
      "tight": "-0.01em",
      "normal": "0",
      "wide": "0.01em",
      "wider": "0.025em"
    }
  },
  
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem"
  },
  
  "borderRadius": {
    "none": "0",
    "sm": "0.25rem",
    "base": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },
  
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
    "focus": "0 0 0 3px rgba(204, 120, 93, 0.2)"
  },
  
  "components": {
    "button": {
      "primary": {
        "background": "#171717",
        "backgroundHover": "#262626",
        "backgroundActive": "#404040",
        "backgroundDisabled": "#E5E5E5",
        "text": "#FFFFFF",
        "textDisabled": "#A3A3A3",
        "border": "transparent",
        "borderRadius": "0.5rem",
        "padding": "0.625rem 1.25rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "height": "2.5rem"
      },
      "secondary": {
        "background": "#FFFFFF",
        "backgroundHover": "#F5F5F5",
        "backgroundActive": "#E5E5E5",
        "backgroundDisabled": "#FAFAFA",
        "text": "#171717",
        "textDisabled": "#A3A3A3",
        "border": "#E5E5E5",
        "borderRadius": "0.5rem",
        "padding": "0.625rem 1.25rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "height": "2.5rem"
      },
      "ghost": {
        "background": "transparent",
        "backgroundHover": "#F5F5F5",
        "backgroundActive": "#E5E5E5",
        "text": "#171717",
        "border": "transparent",
        "borderRadius": "0.5rem",
        "padding": "0.625rem 1.25rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "height": "2.5rem"
      }
    },
    
    "input": {
      "background": "#FFFFFF",
      "backgroundDisabled": "#F5F5F5",
      "border": "#E5E5E5",
      "borderHover": "#D4D4D4",
      "borderFocus": "#CC785D",
      "borderError": "#EF4444",
      "text": "#171717",
      "placeholder": "#A3A3A3",
      "borderRadius": "0.5rem",
      "padding": "0.625rem 0.875rem",
      "fontSize": "0.875rem",
      "height": "2.5rem"
    },
    
    "card": {
      "background": "#FFFFFF",
      "border": "#E5E5E5",
      "borderRadius": "0.75rem",
      "padding": "1.5rem",
      "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)"
    },
    
    "message": {
      "user": {
        "background": "#F5F5F5",
        "text": "#171717",
        "borderRadius": "1rem",
        "padding": "0.75rem 1rem"
      },
      "assistant": {
        "background": "transparent",
        "text": "#171717",
        "borderRadius": "1rem",
        "padding": "0.75rem 0"
      },
      "codeBlock": {
        "background": "#0A0A0A",
        "text": "#FAFAFA",
        "borderRadius": "0.5rem",
        "padding": "1rem",
        "fontFamily": "'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace"
      }
    },
    
    "sidebar": {
      "background": "#FAFAFA",
      "border": "#E5E5E5",
      "width": "16rem",
      "itemPadding": "0.5rem 0.75rem",
      "itemBorderRadius": "0.5rem",
      "itemBackgroundHover": "#F5F5F5",
      "itemBackgroundActive": "#E5E5E5"
    },
    
    "header": {
      "background": "#FFFFFF",
      "border": "#E5E5E5",
      "height": "3.5rem",
      "padding": "0 1.5rem"
    },
    
    "tooltip": {
      "background": "#262626",
      "text": "#FFFFFF",
      "borderRadius": "0.375rem",
      "padding": "0.375rem 0.75rem",
      "fontSize": "0.75rem",
      "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)"
    },
    
    "modal": {
      "background": "#FFFFFF",
      "overlay": "rgba(0, 0, 0, 0.5)",
      "borderRadius": "1rem",
      "padding": "1.5rem",
      "maxWidth": "32rem",
      "shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    }
  },
  
  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "250ms",
      "slow": "350ms"
    },
    "easing": {
      "linear": "linear",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  
  "zIndex": {
    "base": "0",
    "dropdown": "1000",
    "sticky": "1100",
    "fixed": "1200",
    "modalOverlay": "1300",
    "modal": "1400",
    "popover": "1500",
    "tooltip": "1600"
  }
