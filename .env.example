# Google Sheets Configuration
# ID da planilha do Google Sheets (obtido da URL da planilha)
NUXT_PUBLIC_GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# Credenciais da Service Account do Google Cloud
# Email da service account
NUXT_GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Chave privada da service account (inclua com as quebras de linha \n)
NUXT_GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# Cache Configuration
# Habilitar/desabilitar sistema de cache
NUXT_CACHE_ENABLED=true

# Tempo de vida do cache em minutos (quanto tempo os dados ficam válidos)
NUXT_CACHE_TTL_MINUTES=60

# Atualização automática do cache (true para refresh automático quando expirar)
NUXT_CACHE_AUTO_REFRESH=false

# ===================================================
# VERCEL DEPLOYMENT NOTES
# ===================================================
# When deploying to Vercel:
# 1. Go to Project Settings > Environment Variables
# 2. Add each variable above with their actual values
# 3. Select appropriate environments (Production, Preview, Development)
# 4. For NUXT_GOOGLE_PRIVATE_KEY, paste the entire key including quotes
# 5. Vercel will automatically load these as environment variables
